<div class="row"><h1>All our Flats</h1></div>
<div class="row"><p>All <%= @flats.size %> flats.</p></div>




<div class="row">
  <% @flats.each do |flat| %>
  <div class="col-4"><div class="flat-card">
          <div class="flat-card-image" style="background-image: url(<%= flat.url %>)"></div>
          <div class="flat-card-content p-3" style="background: #F8F9FA">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex align-items-center">
              <div class="flex">
                <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>
              </div>
              <div class="flex ml-3">
                <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions" style="background: white">
            <%= link_to 'More Info', flat_path(flat), class: "ml-3 text-primary"%>
            <%= link_to 'Edit', edit_flat_path(flat), class: "ml-3 text-warning"%>
            <%= link_to 'Remove', flat_path(flat), class: "ml-3 text-danger", method: :delete, data: { confirm: "Are you sure?" } %>

          </div>
        </div></div>
  <% end %>
</div>


